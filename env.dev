# .env.example
NODE_ENV=node_env
DB_URI=uri_complete_de_connexion_a_la_bd
APP_PORT=port_de_l_application
JWT_SECRET=secret_pour_generer_le_token
DBMS=MongoDB


# Configuration du système de logging
# Copiez ce fichier vers .env et ajustez selon vos besoins

# Niveau de logging (error, warn, info, debug)
LOG_LEVEL=info

# Taille maximale des fichiers de logs
LOG_MAX_SIZE=20m

# Durée de conservation des fichiers de logs
LOG_MAX_FILES=14d

# Format de date pour la rotation des fichiers
LOG_DATE_PATTERN=YYYY-MM-DD

# Activer/désactiver la console (true/false)
LOG_ENABLE_CONSOLE=true

# Activer/désactiver les fichiers (true/false)
LOG_ENABLE_FILE=true

# Répertoire des logs (relatif à la racine du projet)
LOG_DIRECTORY=logs